<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oudersonsstudios.restaurantrecommendations.MainActivity">

    <TextView
        android:text="Restaurant Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/restaurantNameTextView"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/restaurantImageView"
        android:layout_below="@+id/restaurantNameTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantImageView"
        android:layout_alignParentStart="true"
        android:id="@+id/restaurantDescriptionTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="123 Lorem Ipsum St. Lorem, Ipsum 12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantAddressTextView"
        android:layout_below="@+id/restaurantDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:text="Lorem Ipsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurantAddressTextView"
        android:layout_alignParentStart="true"
        android:id="@+id/restaurantGenreTextView"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/restaurantGenreTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/restaurantFoodListView" />
</RelativeLayout>