<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Restaurant Name"
        android:ems="10"
        android:id="@+id/restaurantNameEditText"
        android:textAppearance="@android:style/TextAppearance.Material.Headline" />

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/restaurantImageButton"
        android:layout_height="250dip" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/restaurantDescriptionEditText"
        android:hint="Restaurant Description" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/restaurantAddressEditText"
        android:hint="Restaurant Address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/restaurantGenreEditText"
        android:hint="Restaurant Food Type" />

    <Button
        android:text="Save"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:textAlignment="center"
        android:layout_gravity="bottom|right" />

</LinearLayout>
